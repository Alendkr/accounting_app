<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.diplom.accounting_app.controllers.PeriodDialogController">
   <ChoiceBox fx:id="periodChoiceBox">
      <items>
         <FXCollections fx:factory="observableArrayList">
            <String fx:value="За сегодня" />
            <String fx:value="За неделю" />
            <String fx:value="За месяц" />
            <String fx:value="За год" />
            <String fx:value="Свой период" />
         </FXCollections>
      </items>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </ChoiceBox>

   <HBox spacing="10">
      <Label text="C:">
         <HBox.margin>
            <Insets left="10.0" top="5.0" />
         </HBox.margin></Label>
      <DatePicker fx:id="startDatePicker" disable="true" prefHeight="26.0" prefWidth="119.0" />
      <Label text="По:">
         <HBox.margin>
            <Insets top="5.0" />
         </HBox.margin></Label>
      <DatePicker fx:id="endDatePicker" disable="true" prefHeight="26.0" prefWidth="127.0">
         <HBox.margin>
            <Insets right="30.0" />
         </HBox.margin></DatePicker>
   </HBox>

   <ChoiceBox fx:id="transactionTypeChoiceBox">
      <items>
         <FXCollections fx:factory="observableArrayList">
            <String fx:value="Все транзакции" />
            <String fx:value="Доходы" />
            <String fx:value="Расходы" />
         </FXCollections>
      </items>
   </ChoiceBox>
   <HBox alignment="CENTER" spacing="10">
      <Button fx:id="findButton" text="Найти">
         <HBox.margin>
            <Insets bottom="10.0" />
         </HBox.margin></Button>
      <Button fx:id="cancelButton" text="Отмена">
         <HBox.margin>
            <Insets bottom="10.0" />
         </HBox.margin></Button>
   </HBox>

</VBox>
